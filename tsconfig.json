{
	"compilerOptions": {
		"target": "es2015",
		"outDir": "dist/",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"removeComments": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
		"lib": [
			"es2015",
			"dom"
		]
	},
	"include": [
		"src/ts/**/*"
	],
	"exclude": [
		"src/ts/vendor/**/*"
	]
}
