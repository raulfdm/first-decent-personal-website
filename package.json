{
  "name": "react-boilerplate",
  "description": "React boilerplate project to start a new configured project from scratch",
  "version": "0.1.4",
  "license": "MIT",
  "author": {
    "name": "Raul Felipe de Melo",
    "email": "melo.raulf@gmail.com",
    "url": "https://rauldemelo.com.br"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raulfdm/react-boilerplate/"
  },
  "bugs": {
    "url": "https://github.com/raulfdm/react-boilerplate/issues"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --progress --config webpack.config.prod -p",
    "start": "cross-env NODE_ENV=development node server.js",
    "lint": "eslint src/",
    "prepush": "npm-run-all lint test",
    "f:start": "flow start",
    "f:check": "flow",
    "f:stop": "flow stop",
    "test": "cross-env NODE_ENV=test jest",
    "test:tdd": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "storybook": "cross-env NODE_ENV=test start-storybook -p 9001 -c .storybook"
  },
  "dependencies": {
    "babel-jest": "^22.0.4",
    "classnames": "^2.2.5",
    "prop-types": "^15.6.0",
    "raf": "^3.4.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "regenerator-runtime": "^0.11.1",
    "reset-css": "^2.2.1"
  },
  "devDependencies": {
    "@storybook/react": "^3.2.17",
    "@types/enzyme": "^3.1.6",
    "@types/jest": "^21.1.9",
    "@types/storybook__react": "^3.0.5",
    "@types/webpack": "^3.8.1",
    "autoprefixer": "^7.2.3",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.12.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "flow-bin": "^0.61.0",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "prettier-eslint": "^8.6.0",
    "resolve-url-loader": "^2.2.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^1.12.2",
    "webpack-hot-middleware": "^2.21.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./src/settings/config/setupTests.js",
    "moduleNameMapper": {
      "^.+\\.s?css$": "identity-obj-proxy"
    }
  }
}
